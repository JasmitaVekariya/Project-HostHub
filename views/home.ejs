<% layout("/layouts/boilerplate.ejs") %>

<!-- Add AOS CSS in your layout head -->
<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">

<body>
  <br>

  <!-- Hero Section -->
  <section class="bg-light py-5" data-aos="fade-up">
    <div class="container text-center">
      <div class="row align-items-center">
        <div class="col-md-6 text-md-start text-center">
          <h1 class="display-4 fw-bold text-danger" data-aos="fade-right">Find your next stay</h1>
          <p class="lead text-muted" data-aos="fade-right" data-aos-delay="200">
            Discover unique places to stay and make unforgettable memories with our curated listings.
          </p>
          <a href="/listings" class="btn btn-danger btn-lg rounded-pill mt-3 px-4" data-aos="zoom-in" data-aos-delay="400">
            Explore Listings
          </a>
        </div>
        <div class="col-md-6">
          <img src="https://t4.ftcdn.net/jpg/00/65/48/25/360_F_65482539_C0ZozE5gUjCafz7Xq98WB4dW6LAhqKfs.jpg"
               alt="Travel Illustration"
               class="img-fluid rounded-4 shadow"
               data-aos="zoom-in">
        </div>
      </div>
    </div>
  </section>

  <!-- Facilities -->
  <section class="bg-light py-5" data-aos="fade-up">
    <div class="container">
      <h2 class="text-center fw-bold mb-5" data-aos="fade-up">What We Offer</h2>
      <div class="row text-center">
        <div class="col-md-3 mb-4" data-aos="fade-up" data-aos-delay="100">
          <img src="https://cdn-icons-png.flaticon.com/512/1946/1946433.png" alt="Comfortable Stays" class="mb-3" style="width: 60px;">
          <h5 class="mt-2">Comfortable Stays</h5>
          <p class="text-muted">Curated listings that feel like home, anywhere you go.</p>
        </div>
        <div class="col-md-3 mb-4" data-aos="fade-up" data-aos-delay="200">
          <img src="https://cdn-icons-png.flaticon.com/512/751/751849.png" alt="Verified Hosts" class="mb-3" style="width: 60px;">
          <h5 class="mt-2">Verified Hosts</h5>
          <p class="text-muted">Stay with confidence with trusted and verified hosts.</p>
        </div>
        <div class="col-md-3 mb-4" data-aos="fade-up" data-aos-delay="300">
          <img src="https://cdn-icons-png.flaticon.com/512/483/483356.png" alt="Free Wi-Fi" class="mb-3" style="width: 60px;">
          <h5 class="mt-2">Free Wi-Fi</h5>
          <p class="text-muted">All properties come with fast and reliable Wi-Fi access.</p>
        </div>
        <div class="col-md-3 mb-4" data-aos="fade-up" data-aos-delay="400">
          <img src="https://cdn-icons-png.flaticon.com/512/3176/3176290.png" alt="Global Reach" class="mb-3" style="width: 60px;">
          <h5 class="mt-2">Global Reach</h5>
          <p class="text-muted">Explore listings in top cities and scenic destinations worldwide.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-5 bg-white" data-aos="fade-up">
    <div class="container">
      <h2 class="text-center fw-bold mb-5" data-aos="fade-up">What Our Guests Say</h2>
      <div class="row text-center">
        <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="100">
          <img src="https://static.vecteezy.com/system/resources/previews/008/437/407/non_2x/female-icon-for-website-symbol-presentation-free-vector.jpg"
               alt="Sneha"
               class="rounded-circle mb-3"
               style="width: 100px;">
          <blockquote class="blockquote">
            <p>"This platform helped me find the coziest home during my solo trip. Highly recommend!"</p>
            <footer class="blockquote-footer">Sneha, Mumbai</footer>
          </blockquote>
        </div>
        <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="200">
          <img src="https://cdn.pixabay.com/photo/2016/08/20/05/38/avatar-1606916_1280.png"
               alt="Arjun"
               class="rounded-circle mb-3"
               style="width: 100px;">
          <blockquote class="blockquote">
            <p>"Clean, safe, and easy to book. It felt just like home!"</p>
            <footer class="blockquote-footer">Arjun, Bangalore</footer>
          </blockquote>
        </div>
        <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="300">
          <img src="https://cdn-icons-png.freepik.com/256/15675/15675868.png?semt=ais_hybrid"
               alt="Neha"
               class="rounded-circle mb-3"
               style="width: 100px;">
          <blockquote class="blockquote">
            <p>"I was amazed by the variety of stays â€” from beach houses to mountain cottages!"</p>
            <footer class="blockquote-footer">Neha, Delhi</footer>
          </blockquote>
        </div>
      </div>
    </div>
  </section>

  <!-- AOS JS -->
  <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
  <script>
    AOS.init({
      duration: 1000,
      once: true
    });
  </script>
</body>