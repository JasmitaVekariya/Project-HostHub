<% layout('layouts/boilerplate') %>
<body>
    <!-- <h1>All Listings</h1> -->
    <div id="filters">
        <a class="filter" href="/listings">
            <div><i class="fa-solid fa-globe"></i></div>
            <p>Explore All</p>
        </a>
        <a class="filter" href="/listings?category=trending">
            <div><i class="fa-solid fa-fire-flame-curved"></i></div>
            <p>Trending</p>
        </a>
        <a class="filter" href="/listings?category=rooms">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </a>
        <a class="filter" href="/listings?category=mountain">
            <div><i class="fa-solid fa-mountain-sun"></i></div>
            <p>Mountain</p>
        </a>
        <a class="filter" href="/listings?category=castles">
            <div><i class="fa-solid fa-chess-rook"></i></div>
            <p>Castles</p>
        </a>
        <a class="filter" href="/listings?category=amazing%20pools">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing Pools</p>
        </a>
        <a class="filter" href="/listings?category=camping">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </a>
        <a class="filter" href="/listings?category=farm">
            <div><i class="fa-solid fa-tractor"></i></div>
            <p>Farms</p>
        </a>
        <a class="filter" href="/listings?category=arctic">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Arctic</p>
        </a>
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Display Total after taxes</label>
            </div>
        </div>
    </div>
    

    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 mt-3 g-4">
        <% listings.forEach(function(listing) { %>
          <div class="col">
            <a href="/listings/<%= listing._id %>">
              <div class="card h-100">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%= listing.title %></b><br>
                    Price: &#8377;<%= listing.price.toLocaleString("en-IN") %> per night
                    <i class="taxInfo"> +18% GST</i>
                  </p>
                </div>
              </div>
            </a>
          </div>
        <% }); %>
      </div>            

</body>
